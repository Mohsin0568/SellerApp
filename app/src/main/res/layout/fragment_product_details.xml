<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohmurtu.registration.ProductDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Categories"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/categories_text"
                android:textColor="@color/purple_color"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categories_text"
                android:layout_marginTop="50dp"
                android:layout_margin="8dp"
                android:id="@+id/product_edit_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/red_color"
                        android:id="@+id/view_red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Id"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/product_id_text"
                        android:layout_below="@id/view_red"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1025"
                        android:layout_marginLeft="120dp"
                        android:textSize="20sp"
                        android:id="@+id/product_id_value"
                        android:layout_below="@id/view_red"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_below="@id/product_id_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:id="@+id/product_title_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Title"
                        android:layout_below="@id/product_id_value"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="120dp"
                        android:singleLine="true"
                        android:textSize="20sp"
                        android:id="@+id/product_title_value"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:layout_below="@id/product_title_text"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:id="@+id/product_quantity_text"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_title_value"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/product_quantity_layout">

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:singleLine="true"
                            android:id="@+id/product_quantity_value"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/product_quantity_text"
                        android:text="MRP"
                        android:textSize="20sp"
                        android:id="@+id/product_mrp_text"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_quantity_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/product_mrp_layout">
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_mrp_value"
                            android:inputType="number"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/product_mrp_text"
                        android:textSize="20sp"
                        android:id="@+id/product_price_text"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_mrp_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/product_price_layout">
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_price_value"
                            android:inputType="number"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/product_price_text"
                        android:textSize="20sp"
                        android:id="@+id/product_discount_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_price_text"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="120dp"
                        android:text="50%"
                        android:textSize="20sp"
                        android:id="@+id/product_discount_value"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visibility"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/product_discount_text"
                        android:textSize="20sp"
                        android:id="@+id/product_visibility_text"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_discount_value"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="120dp"
                        android:id="@+id/visibility_radio_group"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable"
                            android:textSize="20sp"
                            android:id="@+id/radio_enable"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disable"
                            android:textSize="20sp"
                            android:id="@+id/radio_disable"/>

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/product_edit_card"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    style="?borderlessButtonStyle"
                    android:textSize="20sp"
                    android:textColor="@color/buttons_color"
                    android:textAllCaps="false"
                    android:id="@+id/product_edit_save"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    style="?borderlessButtonStyle"
                    android:textSize="20sp"
                    android:textColor="@color/buttons_color"
                    android:textAllCaps="false"
                    android:id="@+id/product_edit_back"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
