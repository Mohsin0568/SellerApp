<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/orders_card_view"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/order_image_preview"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/admin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orders_product_title"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:layout_toRightOf="@+id/order_image_preview"
            android:layout_alignParentTop="true"
            android:text="Product Title"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orders_product_quantity"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:layout_below="@id/orders_product_title"
            android:layout_toRightOf="@+id/order_image_preview"
            android:text="Quantity: 50"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orders_product_cost"
            android:layout_toRightOf="@+id/order_image_preview"
            android:layout_below="@+id/orders_product_quantity"
            android:paddingTop="8dp"
            android:text="Total CostL: 500 Rs"
            android:textSize="22sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_status"
            android:layout_toRightOf="@+id/order_image_preview"
            android:layout_below="@+id/orders_product_cost"
            android:textColor="@color/red_color"
            android:singleLine="true"
            android:text="Confirmation Pending"
            android:textStyle="bold"
            android:paddingTop="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_code"
            android:layout_toRightOf="@+id/order_image_preview"
            android:layout_below="@+id/order_status"
            android:paddingBottom="8dp"
            android:textColor="@color/teal_color"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:text="Order Code"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>