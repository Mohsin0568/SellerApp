<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohmurtu.registration.ProductDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/company_icon"
                android:id="@+id/company_info_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Company Information"
                android:layout_below="@+id/company_info_icon"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/company_info_text"
                android:textColor="@color/purple_color"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_info_text"
                android:layout_marginTop="50dp"
                android:layout_margin="8dp"
                android:id="@+id/company_info_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/red_color"
                        android:id="@+id/view_red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/view_red"
                        android:text="PAN Number"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/pan_number_text"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pan_number_text"
                        android:paddingLeft="40dp"
                        android:paddingRight="10dp"
                        android:id="@+id/pan_number_layout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pan_number_value"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VAT Number"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/pan_number_layout"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/vat_number_text"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/vat_number_text"
                        android:paddingLeft="40dp"
                        android:paddingRight="10dp"
                        android:id="@+id/vat_number_layout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/vat_number_value"
                            android:inputType="number"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CST Number"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/vat_number_layout"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/cst_number_text"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cst_number_text"
                        android:paddingLeft="40dp"
                        android:paddingRight="10dp"
                        android:id="@+id/cst_number_layout"
                        android:paddingBottom="30dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cst_number_value"
                            android:inputType="number"
                            android:singleLine="true"
                            />
                    </android.support.design.widget.TextInputLayout>



                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/company_info_card"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    style="?borderlessButtonStyle"
                    android:textSize="20sp"
                    android:textColor="@color/buttons_color"
                    android:textAllCaps="false"
                    android:id="@+id/company_edit_save"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    style="?borderlessButtonStyle"
                    android:textSize="20sp"
                    android:textColor="@color/buttons_color"
                    android:textAllCaps="false"
                    android:id="@+id/company_edit_back"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
